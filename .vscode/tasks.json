{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			// "args": [
			// 	"-fcolor-diagnostics",
			// 	"-fansi-escape-codes",
			// 	"-g",
			// 	"${file}",
			// 	"-o",
			// 	"${fileDirname}/${fileBasenameNoExtension}"
			// ],
			"args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib-universal",
                "${workspaceFolder}/src/glad.c",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/lib-universal/libglfw.3.dylib",
                "-o",
                "${workspaceFolder}/main.exe",
                "-framework",
                "OpenGL"
            ],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}